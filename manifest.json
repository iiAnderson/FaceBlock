{
  "manifest_version": 2,
  "name": "FaceBlock ",
  "description": "A Web Extension to blacklist content on facebook posts",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popupPage.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["jquery-3.1.1.min.js", "blocker.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ]
}